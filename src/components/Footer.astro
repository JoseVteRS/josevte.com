---
const currentYear = new Date().getFullYear();
---

<footer
    class="opacity-80 mt-16 w-full mx-auto container lg:max-w-4xl md:max-w-2xl flex justify-center"
>
    <div
        class="rounded-lg w-full max-w-screen-xl mx-auto md:flex md:items-center md:justify-between py-4"
    >
        <span
            class="text-sm sm:text-center text-zinc-800/90 dark:text-zinc-200/90"
            >© {currentYear}
            <a href="https://josevte.com/" class="hover:underline">josevte</a>
        </span>
        <span
            class="text-sm sm:text-center text-zinc-800/90 dark:text-zinc-200/90"
        >
            Porfolio inspirado en el de <a
                href="https://twitch.tv/midudev"
                target="_blank"
                rel="noopener">@midudev</a
            >
        </span>
        <ul
            class="flex flex-wrap items-center mt-3 text-sm font-medium dark:text-white/90 sm:mt-0"
        >
            <li>
                <a href="/#sobre-mi" class="hover:underline me-4 md:me-6"
                    >Sobre mí</a
                >
            </li>
            <li>
                <a id="LinkedIn" href="#" class="hover:underline">LinkedIn</a>
            </li>
        </ul>
        <div id="last-commit" class="text-xs text-neutral-500"></div>
    </div>
</footer>

<script>
    const $lastCommit = document.querySelector(
        "#last-commit",
    ) as HTMLDivElement;
    const fetchLastCommit = async () => {
        const response = await fetch(
            "https://api.github.com/repos/JoseVteRS/josevte.com/commits?per_page=1",
        );
        const data = await response.json();
        if (data.length > 0) {
            const lastCommit = data[0];
            const commitDate = new Date(
                lastCommit.commit.author.date,
            ).toLocaleDateString("es-ES");

            return commitDate 
        }
    };

    fetchLastCommit().then((dateString) => {
        $lastCommit.innerHTML = `Última actualización: ${dateString}`;
    });
</script>
